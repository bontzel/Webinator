.row
  .col-md-1
    .btn.btn-link Like
  .col-md-2
    .btn.btn-link{"data-toggle" => "collapse", "data-target" => "#uniqueId"} Comment
  .col-md-9
.collapse#uniqueId
  - if !post.comments.blank?
    = post.comments.each do |comment|
      .row
        .col-md-1
        .col-md-2
          .thumbnail
            %img{:src => comment.user.profile.avatar, :alt => "avatar image", :width => 42, :height => 42 }
        .col-md-8
          .panel.panel-default
            .panel-body
              = comment.text
        .col-md-1
  .row
    .col-md-1
    .col-md-10
      = form_for [current_user, post.wall, post, Comment.new], :class => "margin-fix" do |f|
        .input-group
          = f.text_field :text, { :class => "form-control", :placeholder => "Post a comment..." }
          %span.input-group-btn
            = f.submit "Post Comment", :class => "btn btn-default"
    .col-md-1
  .row
    .col-md-12
      &nbsp
